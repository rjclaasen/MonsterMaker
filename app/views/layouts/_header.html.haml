%body
  %header.navbar.navbar-expand-md.navbar-dark.bg-dark
    .container
      = link_to "MonsterMaker", root_path, id: 'logo', class: 'navbar-brand'
      %nav
        %ul.nav.navbar-nav.navbar-right
          %li.nav-item= link_to "Home", root_path, class: 'nav-link'
          %li.nav-item= link_to "Help", help_path, class: 'nav-link'
          - if user_signed_in?
            %li.nav-item= link_to "Edit Profile", edit_user_registration_path, class: 'nav-link'
            %li.nav-item= link_to "Sign out", destroy_user_session_path, method: :delete, class: 'nav-link'
          - else
            %li.nav-item= link_to "Sign in", new_user_session_path, class: 'nav-link'
            %li.nav-item= link_to "Sign up", new_user_registration_path, class: 'nav-link'
